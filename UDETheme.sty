% Colours
\definecolorstyle{UDEColourStyle}{
\definecolor{UDEBlue}{HTML}{004c93}
\definecolor{JGURed}{HTML}{c1002a}
\definecolor{SpiceBlue}{HTML}{002f6b}
}{
\colorlet{TitleColour}{white}
\colorlet{BackgroundColour}{UDEBlue!20}
}


% Title
\definetitlestyle{UDETitle}{
	width=\textwidth, titletotopverticalspace=0mm
}{
	\draw[color=UDEBlue, fill=UDEBlue]
	(\titleposleft,\titlepostop) rectangle (\titleposright,\titleposbottom);
}


% Background
\definebackgroundstyle{UDEBackgroundStyle}{
	\draw[fill=BackgroundColour]
	(bottomleft) rectangle (topright);
}


% Blocks
\defineblockstyle{UDEBlock}{
    titlewidthscale=1., bodywidthscale=1, roundedcorners=5
}{
    \draw[color=UDEBlue, fill=white,
    rounded corners=\blockroundedcorners] (blockbody.south west)
    rectangle (blockbody.north east);
    \ifBlockHasTitle
    \draw[color=UDEBlue, fill=UDEBlue,
    rounded corners=\blockroundedcorners] (blocktitle.south west)
    rectangle (blocktitle.north east);
    \fi
}



% Theme
\definelayouttheme{UDETheme}{
	\usecolorstyle{UDEColourStyle}
	\usebackgroundstyle{UDEBackgroundStyle}
	\usetitlestyle{UDETitle}
	\useblockstyle{UDEBlock}
	\titlegraphic{%
		\vspace{-10cm}
		\includegraphics[width=0.4\linewidth]{Figures/UDE.eps}
		\hspace{0.05\linewidth}
		\includegraphics[width=0.4\linewidth]{Figures/TWIST.png}
	}
}


% Logo
