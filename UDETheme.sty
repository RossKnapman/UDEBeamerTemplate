        \raggedright
        \color{TitleColour}
        {\bfseries \Huge \sc \@title \par}
        \vspace*{1em}
        {\huge \@author \par}
        \vspace*{1em}
        {\LARGE \@institute}
    \end{minipage}%
    \begin{minipage}{0.4\titlewidth}
	\centering
	\@titlegraphic
    \end{minipage}
}
